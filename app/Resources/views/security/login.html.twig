{% extends 'login.base.html.twig' %}

{% block body %}
    <div id="cl-wrapper" class="login-container login-screen-back">

        <div class="middle-login">
            <div class="block-flat">
                <div class="header">
                    <h3 class="text-center"><img class="logo-img" src="{{ asset('assets/images/za-charts-logo.png') }}" alt="logo" width="203"></h3>
                </div>
                <div>
                    <form style="margin-bottom: 0px !important;" class="form-horizontal" method="post" >
                        <div class="content">
                            <h4 class="title text-center">Login</h4>
                            {% if error  %}
                                <div class="alert alert-danger alert-dismissible fade in" role="alert">
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                                    Invalid credentials, Please contact Administrator.
                                </div>
                            {% endif %}
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                        {{ form_widget(form._username) }}
                                        {#<input type="text" placeholder="Username/email" id="username" class="form-control">#}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-12">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                        {{ form_widget(form._password) }}
                                    </div>
                                </div>
                            </div>

                            <div class="form-group text-center">
                                <button class="btn btn-primary btn-rad btn-block" data-dismiss="modal" type="submit">SIGN IN</button>
                                <a href="#">Forgot password?</a>
                            </div>

                            <span class="form-divider text-center"><p>OR</p></span>

                            <div class="form-group text-center">
                                <button type="button" class="btn btn-primary"><i class="fa fa-facebook-square"></i> Login with Facebook</button>
                                <button type="button" class="btn btn-info"><i class="fa fa-twitter-square"></i> Login with Twitter</button>
                            </div>

                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
            <div class="text-center out-links"><a href="#">&copy; {{ date().format('Y') }} ZA Charts</a></div>
        </div>

    </div>
{% endblock %}